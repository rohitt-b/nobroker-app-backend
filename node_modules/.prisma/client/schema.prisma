generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())

  properties Property[] // ðŸ‘ˆ inverse relation
}

model Property {
  id          String   @id @default(uuid())
  title       String
  description String
  price       Int
  location    String
  ownerId     String
  createdAt   DateTime @default(now())

  owner User @relation(fields: [ownerId], references: [id]) // ðŸ‘ˆ direct relation
}
